# ===========================================
# anon-spliit Environment Configuration
# ===========================================

# Database (Required)
# For Vercel: Use Vercel Postgres connection strings (auto-configured)
# For local: Use your PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
POSTGRES_PRISMA_URL=postgresql://postgres:1234@localhost
POSTGRES_URL_NON_POOLING=postgresql://postgres:1234@localhost

# Default Currency (Optional)
# ISO 4217 currency code (e.g., USD, EUR, JPY)
# Leave empty to use default
NEXT_PUBLIC_DEFAULT_CURRENCY_CODE=""

# ===========================================
# Auto-delete Settings
# ===========================================
AUTO_DELETE_INACTIVE_DAYS=90    # Days of inactivity before auto-deletion (0 to disable)
DELETE_GRACE_PERIOD_DAYS=7      # Days before permanent deletion after soft-delete
CRON_SECRET=""                  # Secret for authenticating cron requests (generate with: openssl rand -base64 32)

# ===========================================
# Private Instance Mode (Optional)
# Enable if you want to restrict access to whitelisted users only
# When disabled, NEXTAUTH_* settings are not required
# ===========================================
PRIVATE_INSTANCE=false

# Uncomment and configure the following if PRIVATE_INSTANCE=true
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=changeme
# NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
# NEXTAUTH_URL=http://localhost:3000

# ===========================================
# Two-Factor Authentication (Optional)
# Enable for TOTP-based 2FA on private instances
# ===========================================
# TWO_FA_ENCRYPTION_KEY=     # 256-bit hex key (generate with: openssl rand -hex 32)

# ===========================================
# S3 Storage (Optional)
# Enable for expense document attachments
# ===========================================
NEXT_PUBLIC_ENABLE_EXPENSE_DOCUMENTS=false
# S3_UPLOAD_KEY=your-key
# S3_UPLOAD_SECRET=your-secret
# S3_UPLOAD_BUCKET=your-bucket
# S3_UPLOAD_REGION=us-east-1
# S3_UPLOAD_ENDPOINT=           # Optional: For S3-compatible services (e.g., Cloudflare R2)

# ===========================================
# AI Features (Optional)
# Enable for receipt scanning and category extraction
# ===========================================
NEXT_PUBLIC_ENABLE_RECEIPT_EXTRACT=false
NEXT_PUBLIC_ENABLE_CATEGORY_EXTRACT=false
# OPENAI_API_KEY=your-api-key   # Required if above features are enabled
